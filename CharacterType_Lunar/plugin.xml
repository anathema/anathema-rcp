<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="net.sf.anathema.character.core.templates">
      <template
            characterTypeId="net.sf.anathema.character.type.lunar"
            templateId="net.sf.anathema.character.template.pactlunar"
            name="%template.pactlunar.name">
         <modelList
               modelListId="net.sf.anathema.character.basic.modelList">
         </modelList>
      </template>
   </extension>
   <extension
         point="net.sf.anathema.character.points.bonuspoints">
      <bonuspoints
            amount="15"
            templateId="net.sf.anathema.character.template.pactlunar">
      </bonuspoints>
   </extension>
   <extension
         point="net.sf.anathema.character.freebies.credits">
      <creditList
            templateId="net.sf.anathema.character.template.pactlunar">
         <credit
               id="net.sf.anathema.character.attributes.freebies.primary"
               value="8">
         </credit>
         <credit
               id="net.sf.anathema.character.attributes.freebies.secondary"
               value="6">
         </credit>
         <credit
               id="net.sf.anathema.character.attributes.freebies.tertiary"
               value="4">
         </credit>
         <credit
               id="net.sf.anthema.character.attributes.freebies.favored"
               value="1">
         </credit>
         <credit
               id="net.sf.anathema.character.attributes.count.favored"
               value="1">
         </credit>
         <credit
               id="net.sf.anathema.character.abilties.freebies.default"
               value="25">
         </credit>
         <credit
               id="net.sf.anathema.character.abilities.count.favored"
               value="2">
         </credit>
      </creditList>
   </extension>
   <extension
         point="net.sf.anathema.character.caste.traitmodels">
      <traitmodel
            characterType="net.sf.anathema.character.type.lunar"
            modelId="net.sf.anathema.character.attributes.model">
      </traitmodel>
   </extension>
   <extension
         point="net.sf.anathema.character.core.types">
      <characterType
            id="net.sf.anathema.character.type.lunar"
            image="icons/LunarIcon_16.png"
            traitImageId="LunarBall">
      </characterType>
   </extension>
   <extension
         point="net.sf.anathema.character.core.resources">
      <image
            referenceId="LunarBall"
            resourceUrl="icons/Ball_Lunar_16.png">
      </image>
   </extension>
   <extension
         point="net.sf.anathema.character.importwizard.templateconverters">
      <converter
            newTemplateId="net.sf.anathema.character.template.pactlunar"
            oldCharacterType="Lunar"
            oldTemplateId="TemplateType.Default">
      </converter>
   </extension>
   <extension
         point="net.sf.anathema.character.caste.castes">
      <casteList
            characterType="net.sf.anathema.character.type.lunar">
         <caste
               casteId="FullMoon"
               printName="%caste.printName.FullMoon">
            <trait
                  traitId="Strength">
            </trait>
            <trait
                  traitId="Dexterity">
            </trait>
            <trait
                  traitId="Stamina">
            </trait>
         </caste>
         <caste
               casteId="ChangingMoon"
               printName="%caste.printName.ChangingMoon">
            <trait
                  traitId="Charisma">
            </trait>
            <trait
                  traitId="Manipulation">
            </trait>
            <trait
                  traitId="Appearance">
            </trait>
         </caste>
         <caste
               casteId="NoMoon"
               printName="%caste.printName.NoMoon">
            <trait
                  traitId="Perception">
            </trait>
            <trait
                  traitId="Intelligence">
            </trait>
            <trait
                  traitId="Wits">
            </trait>
         </caste>
      </casteList>
   </extension>
   <extension
         point="net.sf.anathema.character.core.resources">
      <image
            referenceId="FullMoon"
            resourceUrl="icons/Caste_FullMoon_16.png">
      </image>
      <image
            referenceId="NoMoon"
            resourceUrl="icons/Caste_NoMoon_16.png">
      </image>
      <image
            referenceId="ChangingMoon"
            resourceUrl="icons/Caste_ChangingMoon_16.png">
      </image>
   </extension>
   <extension
         point="net.sf.anathema.character.core.modeldependencies">
      <dependency
            characterType="net.sf.anathema.character.type.lunar"
            dependentModelId="net.sf.anathema.character.attributes.model"
            neededModelId="net.sf.anathema.character.caste.model">
      </dependency>
   </extension>
   <extension
         point="net.sf.anathema.character.trait.favorization">
      <favorization
            characterTemplateId="net.sf.anathema.character.template.pactlunar"
            favoredCount="1"
            modelId="net.sf.anathema.character.attributes.model">
      </favorization>
      <favorization
            characterTemplateId="net.sf.anathema.character.template.pactlunar"
            favoredCount="2"
            modelId="net.sf.anathema.character.abilities.model">
         <requiredFavored
               traitId="Survival">
         </requiredFavored>
      </favorization>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="true"
            category="net.sf.anathema.category.character"
            class="net.sf.anathema.charactertype.lunar.NewPactLunarWizard"
            hasPages="false"
            icon="icons/LunarIcon_16.png"
            id="net.sf.anathema.character.template.pactlunar.newwizard"
            name="%new.wizard.character.template.pactlunar">
      </wizard>
   </extension>
   <extension
         point="net.sf.anathema.character.trait.validator">
      <validator>
         <condition>
            <where>
               <templateId
                     id="net.sf.anathema.character.template.pactlunar">
               </templateId>
            </where>
         </condition>
         <minimum
               value="2"
               traitId="Survival">
         </minimum>
      </validator>
   </extension>

</plugin>
