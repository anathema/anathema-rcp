<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="textencoder" name="%CharacterReportTextEncoder.ExtensionPoint.name" schema="schema/textencoder.exsd"/>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.sf.anathema.character.textreport.CharacterTextReportPdfHandler"
            commandId="net.sf.anathema.character.textreport">
         <activeWhen>
            <reference
                  definitionId="activeEditor.is.CharacterEditor">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="net.sf.anathema.character.textreport"
            name="%command.character.textreport.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=net.sf.anathema.rcp.toolbar.save">
         <toolbar
               id="Character_Sheet.toolbar">
            <command
                  commandId="net.sf.anathema.character.textreport"
                  tooltip="%toolbar.character.sheet.command.tooltip">
               <visibleWhen>
                  <reference
                        definitionId="activeEditor.is.CharacterEditor">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            class="net.sf.anathema.character.textreport.wizard.TextReportExportWizard"
            icon="icons/pdf_icon.png"
            id="net.sf.anathema.character.textreport.wizard"
            name="Character Text Report">
      </wizard>
   </extension>

</plugin>
