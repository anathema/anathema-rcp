<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="net.sf.anathema.character.freebies.configurations">
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.freebies.attributes.PrimaryAttributeFreebies"
            name="%freebies.PrimaryAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.freebies.attributes.SecondaryAttributeFreebies"
            name="%freebies.SecondaryAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.freebies.attributes.TertiaryAttributeFreebies"
            name="%freebies.TertiaryAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.freebies.attributes.FavoredAttributeFreebiesHandler"
            name="%freebies.FreeFavoredAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.freebies.attributes.FavoredAttributeCountHandler"
            name="%freebies.FavoredCount">
      </FreebiesConfiguration>
   </extension>
   <extension
         point="net.sf.anathema.character.points.configuration">
      <bonusPointCalculator
            groupReference="attributepoints"
            handlerClass="net.sf.anathema.character.freebies.attributes.FreebiesBonusPointReducer">
      </bonusPointCalculator>
      <bonusPointCalculator
            groupReference="attributepoints"
            handlerClass="net.sf.anathema.character.freebies.attributes.FavoredAttributeBonusPointReducer">
      </bonusPointCalculator>
   </extension>
   <extension
         point="net.sf.anathema.editor.decoration.trait">
      <decoration
            class="net.sf.anathema.character.freebies.attributes.coverage.SurplusMarkingEditorDecoration">
      </decoration>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="net.sf.anathema.character.freebies.toggle.surplusmarking"
            name="%toggle.surplusmarking.command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.sf.anathema.character.freebies.attributes.coverage.ToggleSurplusMarkingHandler"
            commandId="net.sf.anathema.character.freebies.toggle.surplusmarking">
         <activeWhen>
            <reference
                  definitionId="activeEditor.is.TraitGroupEditor">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="Character_Freebies.toolbar">
            <command
                  commandId="net.sf.anathema.character.freebies.toggle.surplusmarking"
                  icon="icons/highlight.gif"
                  style="toggle"
                  tooltip="%toggle.surplusmarking.command.tooltip">
               <visibleWhen>
                  <reference
                        definitionId="activeEditor.is.TraitGroupEditor">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
