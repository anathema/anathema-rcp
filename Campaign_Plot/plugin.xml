<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="net.sf.anathema.plot.unit" name="%plot.extension-point.plotunit.name" schema="schema/net.sf.anathema.plot.unit.exsd"/>
   <extension
         point="net.sf.anathema.repository.itemtypes">
      <itemtype
            icon="icons/TabSeries16.png"
            id="net.sf.anathema.itemtype.Plot"
            project="Plot"
            type="%itemtype.type.plot"
            untitledName="%itemtype.untitled.plot"
            viewElementFactoryClass="net.sf.anathema.campaign.plot.repository.PlotViewElementFactory">
      </itemtype>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
     <editor
           class="net.sf.anathema.editor.styledtext.StyledTextEditor"
           contributorClass="net.sf.anathema.editor.styledtext.StyledTextEditorActionBarContributor"
           extensions="srs"
           icon="icons/TabSeries16.png"
           id="net.sf.anathema.campaign.plot.ploteditor"
           name="%net.sf.anathema.campaign.plot.ploteditor.name">
      </editor>
   </extension>
   <extension
         point="net.sf.anathema.repository.dnd">
      <dndFactory
            class="net.sf.anathema.campaign.plot.dnd.PlotRepositoryDND">
      </dndFactory>
   </extension>
   <extension
         point="net.sf.anathema.plot.unit">
      <Unit
            icon="icons/FolderPlot16.png"
            id="net.sf.anathema.plot.unit.plot"
            name="%plotunit.unit.plot"
            recursive="false">
      </Unit>
      <Unit
            icon="icons/FolderStory16.png"
            id="net.sf.anathema.plot.unit.story"
            name="%plotunit.unit.story"
            parentId="net.sf.anathema.plot.unit.plot"
            recursive="false">
      </Unit>
      <Unit
            icon="icons/FolderEpisode16.png"
            id="net.sf.anathema.plot.unit.episode"
            name="%plotunit.unit.episode"
            parentId="net.sf.anathema.plot.unit.story"
            recursive="false">
      </Unit>
      <Unit
            icon="icons/FolderScene16.png"
            id="net.sf.anathema.plot.unit.scene"
            name="%plotunit.unit.scene"
            parentId="net.sf.anathema.plot.unit.episode"
            recursive="true">
      </Unit>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="true"
            category="net.sf.anathema.category.campaign"
            class="net.sf.anathema.campaign.plot.creation.NewPlotWizard"
            hasPages="false"
            icon="icons/TabSeries16.png"
            id="net.sf.anathema.campaign.plot.newwizard"
            name="%new.wizard.plot.name"
            project="false">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:net.sf.anathema.basics.repositoryview">
         <command
               commandId="net.sf.anathema.commands.newplotelement"
               label="%new.plotelement"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="net.sf.anathema.campaign.plot.element.selection">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="net.sf.anathema.commands.newplotelement"
            name="%new.plotelement">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.sf.anathema.campaign.plot.creation.NewPlotElementHandler"
            commandId="net.sf.anathema.commands.newplotelement">
         <activeWhen>
            <reference
                  definitionId="net.sf.anathema.campaign.plot.element.selection">
            </reference></activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="net.sf.anathema.campaign.plot.element.selection">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="net.sf.anathema.campaign.plot.repository.IPlotElementViewElement">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>

</plugin>
