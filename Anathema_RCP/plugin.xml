<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="Anathema.MainToolbar" name="MainToolbar" schema="schema/Anathema.MainToolbar.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="anathema_rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="anathema_rcp.Perspective"
            id="Anathema_RCP.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="net.sf.anathema.rcp.application"
            name="Anathema">
         <property
               name="appName"
               value="Anathema">
         </property>
      </product>
   </extension>

</plugin>
