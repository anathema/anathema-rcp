<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="net.sf.anathema.character.models">
      <model
            filename="attributes.model"
            id="net.sf.anathema.character.attributes.model"
            modelFactory="net.sf.anathema.character.attributes.model.AttributesFactory">
         <displayConfiguration
               displayName="%viewelement.name.attributes"
               editorId="net.sf.anathema.character.attributes.editor"
               editorInputFactory="net.sf.anathema.character.attributes.model.AttributeEditorInputFactory"
               icon="icons/TabCharacter16.png">
         </displayConfiguration>
      </model>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.sf.anathema.character.trait.groupeditor.TraitGroupEditor"
            contributorClass="net.sf.anathema.character.attributes.view.AttributesEditorToolbarContributor"
            icon="icons/TabCharacter16.png"
            id="net.sf.anathema.character.attributes.editor"
            name="%editor.name.attributes">
      </editor>
   </extension>
   <extension
         point="net.sf.anathema.character.points.configuration">
      <pointGroup
            groupId="attributepoints"
            modelId="net.sf.anathema.character.attributes.model"
            name="%character.attributes.pointconfiguration">
      </pointGroup>
      <bonusPointCalculator
            groupReference="attributepoints"
            handlerClass="net.sf.anathema.character.attributes.points.AttributeBonusPointHandler">
      </bonusPointCalculator>
      <experiencePointCalculator
            groupReference="attributepoints"
            handlerClass="net.sf.anathema.character.attributes.points.AttributeExperienceHandler">
      </experiencePointCalculator>
      <bonusPointCalculator
            groupReference="attributepoints"
            handlerClass="net.sf.anathema.character.attributes.points.FreebiesBonusPointReducer">
      </bonusPointCalculator>
      <bonusPointCalculator
            groupReference="attributepoints"
            handlerClass="net.sf.anathema.character.attributes.points.FavoredAttributeBonusPointReducer">
      </bonusPointCalculator>
   </extension>
   <extension
         point="net.sf.anathema.character.freebies.configurations">
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.attributes.points.PrimaryAttributeFreebies"
            name="%PrimaryAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.attributes.points.SecondaryAttributeFreebies"
            name="%SecondaryAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.attributes.points.TertiaryAttributeFreebies"
            name="%TertiaryAttributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.attributes.points.FavoredAttributeFreebiesHandler"
            name="Free Favored Attributes">
      </FreebiesConfiguration>
      <FreebiesConfiguration
            handlerClass="net.sf.anathema.character.attributes.points.FavoredAttributeCountHandler"
            name="Favored count">
      </FreebiesConfiguration>
   </extension>

</plugin>
