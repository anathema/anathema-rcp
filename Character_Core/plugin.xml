<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="net.sf.anathema.character.models" name="%extension-point.name.charactermodels" schema="schema/net.sf.anathema.character.models.exsd"/>
   <extension-point id="net.sf.anathema.character.templates" name="Character Templates" schema="schema/net.sf.anathema.character.templates.exsd"/>
   <extension
         point="net.sf.anathema.repository.itemtypes">
      <itemtype
            icon="icons/TabCharacter16.png"
            id="net.sf.anathema.itemtype.Character"
            project="Character"
            type="%itemtype.type.character"
            untitledName="%itemtype.untitled.character"
            viewElementFactoryClass="net.sf.anathema.character.core.repository.internal.CharacterViewElementFactory">
      </itemtype>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="EmptyContribution"
            targetID="EmptyContribution">
      </viewerContribution>
      <objectContribution
            adaptable="false"
            id="net.sf.anathema.character.popup.new"
            objectClass="net.sf.anathema.basics.repository.treecontent.itemtype.ItemTypeViewElement">
         <action
               class="net.sf.anathema.character.core.create.NewCharacterActionDelegate"
               icon="icons/TabCharacter16.png"
               id="net.sf.anathema.character.core.popup.new"
               label="%itemtype.new.character">
         </action>
      </objectContribution>
   </extension>

</plugin>
