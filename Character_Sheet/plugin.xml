<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="net.sf.anathema.character.sheet.encoder" name="%sheet.encoder.extension.name" schema="schema/net.sf.anathema.character.sheet.encoder.exsd"/>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=net.sf.anathema.rcp.toolbar.save">
         <toolbar
               id="Character_Sheet.toolbar">
            <command
                  commandId="net.sf.anathema.character.sheet"
                  icon="icons/pdf_icon.png"
                  tooltip="%toolbar.character.sheet.command.tooltip">
               <visibleWhen>
                  <reference
                        definitionId="activeEditor.is.CharacterEditor">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="net.sf.anathema.character.sheet"
            name="%command.character.sheet.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.sf.anathema.character.sheet.pdf.CharacterSheetPdfHandler"
            commandId="net.sf.anathema.character.sheet">
         <activeWhen>
            <reference
                  definitionId="activeEditor.is.CharacterEditor">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="net.sf.anathema.character.sheet.encoder">
      <encoder
            class="net.sf.anathema.character.sheet.attributes.AttributesBoxEncoder"
            fieldId="encoder.attributes">
      </encoder>
   </extension>

</plugin>
