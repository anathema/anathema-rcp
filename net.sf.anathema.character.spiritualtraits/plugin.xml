<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="net.sf.anathema.character.core.models">
      <model
            filename="spiritual.model"
            id="net.sf.anathema.character.spiritualtraits.model"
            modelFactory="net.sf.anathema.character.spiritualtraits.model.SpiritualTraitModelFactory">
         <displayConfiguration
               displayName="Spirtual Traits"
               editorId="net.sf.anathema.character.spiritualtraits.editor"
               editorInputFactory="net.sf.anathema.character.spiritualtraits.editor.SpirtualTraitsEditorInputFactory"
               icon="icons/TabCharacter16.png">
         </displayConfiguration>
      </model>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.sf.anathema.character.trait.groupeditor.TraitGroupEditor"
            default="false"
            icon="icons/TabCharacter16.png"
            id="net.sf.anathema.character.spiritualtraits.editor"
            name="Spiritual Traits Editor">
      </editor>
   </extension>
   <extension
         point="net.sf.anathema.character.trait.validator">
      <validator>
         <condition>
            <where>
               <modelId
                     id="net.sf.anathema.character.spiritualtraits.model">
               </modelId>
            </where>
         </condition>
         <minimum
               traitId="Essence"
               value="1">
         </minimum>
      </validator>
   </extension>

</plugin>
